{
  "name": "wikompose",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "cd wikompose-ui && npm install && cd ../wikompose-main && npm install",
    "build": "cd wikompose-ui && ng build --base-href ./ --output-path=../wikompose-main/ui",
    "start": "npm run build && electron ./wikompose-main",
    "package:win": "npm run build && electron-packager ./wikompose-main --no-prune --out=./bin --platform=win32",
    "package:mac": "npm run build && electron-packager ./wikompose-main --no-prune --out=./bin --platform=darwin"
  },
  "private": true,
  "devDependencies": {
    "electron": "^3.0.2",
    "electron-packager": "^12.1.2"
  }
}
